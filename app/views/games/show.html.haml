/ %div Guesses left: #{game.guesses_left}

.word
  - game.word.split('').each do |letter|
    - if game.guesses.include?(letter)
      = letter
    - else
      _

%div Guesses: #{game.guesses.to_a.join ', '}

%ul
  - ('a'..'z').each do |letter|
    - if game.guesses.include?(letter)
      %strike #{letter}
    - else
      = form_tag game_guesses_path do |f|
        = hidden_field_tag :letter, letter
        = button_tag letter